<!--pages/check/check.wxml-->
<calendar
  calendarConfig="{{calendarConfig}}"
  bind:afterTapDay="afterTapDay"
  bind:whenChangeMonth="whenChangeMonth"
  bind:onTapDay="onTapDay"
  bind:afterCalendarRender="afterCalendarRender"
>
</calendar>
<i-panel title="安排">
  <i-cell-group>
    <i-cell
      wx:for="{{checks}}"
      wx:key="{{index}}"
      url="/pages/job_detail/job_detail?id={{item.id}}" 
      title="{{item.title}}" 
    >
      <view slot="icon">
        <i-avatar size="small">砖</i-avatar>
      </view>
      <view slot="footer">
        {{item.checkBeginTime}}~{{item.checkEndTime}}
      </view>
    </i-cell>
  </i-cell-group>
</i-panel>
<button class="check-button" bind:click="handleCheck">
  <text>打卡</text>
</button>