<!--pages/check_inform/check_inform.wxml-->
<map class="check-map" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" circles="{{circles}}"></map>
<view class="tag-container">
  <view class="tag" bind:tap="handleTransport">可打卡区域</view>
</view>
<i-divider color="#e9eaec" lineColor="#e9eaec" height="12"></i-divider>
<i-panel title="{{job_name}}">
  <i-cell-group>
    <i-cell>允许打卡时间：{{begin_check_time}}~{{end_check_time}}</i-cell>
    <i-cell title="打卡地点"></i-cell>
  </i-cell-group>
</i-panel>
<i-button class="check-button" bind:click="handleCheck" type="success">
  <text>打卡</text>
</i-button>

<i-toast id="toast" />