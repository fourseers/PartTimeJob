<!--pages/draw/draw.wxml-->
<view class="container">
  <i-panel title="支取记录">
    <i-cell-group>
      <i-cell wx:for="{{history}}" wx:key="index" title="收款方式:{{item.method}}">
        <view slot="icon">
          <i-avatar src="/assets/icons/money.png" shape="square"></i-avatar>
        </view>
        <view slot="footer">
          {{item.payment}}元
        </view>
        <text style="font-size: 12px; color: grey">时间:{{item.time}};\n订单号:{{item.meta}}</text>
      </i-cell>
    </i-cell-group>
  </i-panel>
</view>
