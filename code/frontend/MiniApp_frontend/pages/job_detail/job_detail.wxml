<!--pages/job-detail/job_detail.wxml-->
<i-panel i-class="title-box">
  <i-cell title="{{job_name}}" label="只招{{need_amount}}人">
    <view slot="icon">
      <i-avatar size="large" shape="square" src="/assets/icons/job.png"></i-avatar>
    </view>
    <view slot="footer">
      <view>
        {{salary}}元/天
      </view>
    </view>
  </i-cell>
</i-panel>
<i-button bind:click="handleClickApply" type="success" shape="circle" size="small" loading="{{isLoading}}">立即报名</i-button>
<i-panel i-class="detail-box">
  <i-cell title="职位描述"></i-cell>
  <i-cell>
    <i-tag
      wx:for="{{tags}}"
      wx:key="{{index}}"
      checkable="{{true}}"
      name="{{index}}"
      color="yellow"
      checked="{{true}}"
      type="border"
      class="i-tags"
    >
      {{item.name}}
    </i-tag>
  </i-cell>
  <i-cell label="{{job_detail}}"></i-cell>
</i-panel>
<i-panel i-class="date-box">
  <i-cell-group>
    <i-cell>
      上班时间：{{begin_date}} ~ {{end_date}}
    </i-cell>
    <i-cell>
      报名时间：{{begin_apply_date}} ~ {{end_apply_date}}
    </i-cell>
  </i-cell-group>
</i-panel>
<i-panel>
  <i-cell title="工作地点" label="{{address}}"></i-cell>
  <map class="job-map" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}"></map>
  <i-cell title="公司信息" label="{{shop_name}}--{{address}}" is-link url="/pages/shop/shop?id={{shop_id}}">
    <view slot="footer">
      查看详细
    </view>
  </i-cell>
</i-panel>
<i-toast id="toast" />