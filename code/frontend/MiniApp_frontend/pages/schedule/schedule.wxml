<scroll-view class="table-t" scroll-x>
  <view class="head-column">
    <view class="head-cell"></view>
    <view class="head-cell">日</view>
    <view class="head-cell">一</view>
    <view class="head-cell">二</view>
    <view class="head-cell">三</view>
    <view class="head-cell">四</view>
    <view class="head-cell">五</view>
    <view class="head-cell">六</view>
  </view>
  <view> 
    <view class="scroll-table" bindtap="handleTap">
      <block wx:for="{{schedule[0]}}" wx:for-index="time" wx:key="{{schedule[time]}}">
        <view class="column">
          <view class="column-head-cell">{{timeList[time]}}时</view>
          <block wx:for="{{week}}" wx:for-index="date" wx:key="{{week[date]}}">
            <view class="{{schedule[date][time] ? 'cell choose-g' : 'cell'}}" id="{{date * 24 + time}}">{{schedule[date][time] ? "添加" : ""}}</view>
          </block>
        </view>
      </block>
    </view>
  </view>
</scroll-view>