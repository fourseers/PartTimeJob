/* pages/schedule/schedule.wxss */
.table {
  border: 0px solid darkgray;
}
.table-t {
  
}
.scroll-table {
  margin-left: 3rem;
  display: flex;
}
.head-column {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
}
.head-cell {
  width: 3rem;
  height: 96rpx;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  align-items: center;
}
.column {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.column-head-cell {
  width: 3rem;
  height: 96rpx;
  justify-content: center;
  background: #fdcb6e;
  color: #fff;
  align-items: center;
  display: flex;
}
.cell {
  width: 3rem;
  height: 96rpx;
  justify-content: center;
  color: #fff;
  display: flex;
  align-items: center;
  background: #f8f8f9;
}
.scheduled-cell {
  width: 3rem;
  height: 96rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  background: #19be6b;
}
.choose-g{
  width: 3rem;
  height: 96rpx;
  background: #5cadff;
}
.delete-g{
  width: 3rem;
  height: 96rpx;
  background: #ed3f14;
}

.color{
  padding: 0 !important;
  border: none !important;
}
.color-col{
  margin-bottom: 16px;
}
.color-item-title{
  padding: 6px 6px 0;
  font-size: 14px;
}
.color-item{
  width: 100%;
  color: #fff;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.color-item.scheduled{
  background: #19be6b;
}
.color-item.add{
  background: #5cadff;
}
.color-item.delete{
  background: #ed3f14;
}
.color-item.none{
  color: #1c2438;
  background: #f8f8f9;
}